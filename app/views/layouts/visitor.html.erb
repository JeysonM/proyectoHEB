    <a class="item" href="#"><i class="warning circle icon"></i>Legislación  Empresarial</a>
    <a class="item" href="/noticias"><i class="newspaper icon"></i>Noticias</a>
    <a class="item" href="/terminosYcondiciones"><i class="write square icon"></i>Términos y condiciones</a>
  </div>
  <!--Fin Sidebar-->
</div>

</header>
<!--funcinamiento sticky para el menu Importante-->
<script type="text/javascript">
  $('.ui.sticky').sticky();

  $('#toggle').click(function(){
    $('.ui.sidebar').sidebar('toggle');
  });
</script>
<!--Fin header-->

<section id="main-content">
  <%= yield %>
</section>
